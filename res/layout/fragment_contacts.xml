<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="Contacts"
        android:layout_alignBottom="@+id/contactsImageView"
        android:layout_toRightOf="@+id/contactsImageView"
        android:layout_marginLeft="20dp" />

    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_communities"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:id="@+id/contactsImageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select New Contacts"
        android:id="@+id/addNewContactsViewButton"
        android:layout_below="@+id/contactsImageView"
        android:layout_alignLeft="@+id/contactsImageView"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/txtLabel" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectedContactsListView"
        android:layout_below="@+id/addNewContactsViewButton"
        android:layout_alignLeft="@+id/addNewContactsViewButton"
        android:layout_marginTop="20dp" />

</RelativeLayout>
